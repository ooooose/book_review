<%= provide :title, 'Book_Research' %>

<div class='content'>
  <div id="search-box">
    <%= form_tag('/search', method: :get) do %>
        <%= text_field_tag :title, @title,  class: "form-control", name: "keyword", placeholder: "キーワードを打ち込んでください" %>
        <button class="btn btn-primary" title="検索" type="submit">検索</button>
        <button class="btn btn-secondary" title="検索" type="submit", method = 'delete'>リセット</button>
    <% end %>    
  </div>
  <br/>
  <h2 class="lead">検索結果</h2>
  <div id='book_list'>
     <%= render partial: 'book_list' %>
  </div>
</div>