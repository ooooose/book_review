<% provide(:title, @title) %>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Books:</b> <%= link_to @user.books.count, user_books_path(@user) %></span>
    </section>
    <section class="stats">
      <%= render 'stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= gravatar_for(user) %>
            <%= link_to user.name, user %>
            <hr/>
          <% end %>
        </div>
      <% end %>
  </div>
</div>