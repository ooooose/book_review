<% provide :title, 'Users' %>

<div class="row">
  <% @users.each do |user| %>
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <%= gravatar_for user %>
        <div class="card-body">
          <h3 class="card-title"><%= link_to user.name, user %></h3>
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <% if current_user == user %>
                <%= link_to "編集", edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "削除", user_path(user),method: :delete, class: "btn btn-sm btn-outline-secondary" %>
              <% end %>
            </div>
            <div class="stats">
              <a href="<%= following_user_path(user) %>">
                <strong id="followings" class="stat">
                  <%= user.followings.count %>
                </strong>
                following
              </a>
              <a href="<%= followers_user_path(user) %>">
                <strong id="followers" class="stat">
                  <%= user.followers.count %>
                </strong>
                followers
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>